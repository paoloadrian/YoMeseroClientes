<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="android.hmkcode.com.yomeseroclientes.OrderView">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Pedido Confirmado"
        android:layout_gravity="left"
        android:textColor="#405161"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/check_icon" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Su pedido a sido confirmado y enviado exitosamente. En breves minutos podra disfrutarde su comida. Muchas gracias"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff070a25"
        android:textAlignment="center"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pedir Cuenta"
        android:id="@+id/button3"
        android:background="#59B66C"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="pedirCuenta"/>

</LinearLayout>
