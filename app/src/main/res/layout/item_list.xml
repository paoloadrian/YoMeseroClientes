<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:padding="6dip"
    android:orientation="vertical"
    android:id="@+id/itemlist" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/plusbutton"
        android:layout_toStartOf="@+id/plusbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/minusbutton" />

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp"
        android:layout_toStartOf="@+id/plusbutton"
        android:layout_above="@+id/secondLine"
        android:layout_toLeftOf="@+id/plusbutton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:text="+"
        android:id="@+id/plusbutton"
        android:textColor="@android:color/white"
        android:background="#59B66C"
        android:textSize="20dip"
        android:layout_alignTop="@+id/firstLine"
        android:layout_alignLeft="@+id/minusbutton"
        android:layout_alignStart="@+id/minusbutton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:text="-"
        android:id="@+id/minusbutton"
        android:textColor="@android:color/white"
        android:background="#FFF00016"
        android:textSize="20dip"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="15dip"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/plusbutton"
        android:layout_toStartOf="@+id/cant"
        android:layout_alignBottom="@+id/minusbutton"
        android:layout_toLeftOf="@+id/cant" />

    <TextView
        android:id="@+id/cant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="0"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/minusbutton" />

</RelativeLayout>